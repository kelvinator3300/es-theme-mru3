<theme>
	<formatVersion>4</formatVersion>
	<feature supported="carousel">

		<view name="system">

			<image name="background" extra="true">
<!-- You can change the background image by putting another image in the following path and editing the following line. -->
				<path>./_inc/images/system.png</path>
				<origin>0 0</origin>
				<pos>0 0</pos>
				<size>1 1</size>
			</image>

			<carousel name="systemcarousel">
				<type>vertical</type>
				<color>00000000</color>
				<logoScale>1.4</logoScale>
				<maxLogoCount>5</maxLogoCount>
				<origin>0.5 0</origin>
				<pos>0.5 0</pos>
				<size>0.55 1</size>
			</carousel>
		
			<text name="systemInfo">
				<color>ee00aa</color>
				<fontSize>0.022</fontSize>
				<origin>0.5 1</origin>
				<pos>0.5 0.64</pos>
				<size>0.5 0.03</size>
			</text>

		<image name="background_top1" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 0.4</size>
			<color>00000066</color>
		</image>

		<image name="background_bottom1" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 0</origin>
			<pos>0 0.6</pos>
			<size>1 0.4</size>
			<color>00000066</color>
		</image>

			<image name="background_help" extra="true">
				<path>./_inc/images/bg_color.png</path>
				<origin>0 1</origin>
				<pos>0 1</pos>
				<size>1 0.03</size>
				<color>000000</color>
			</image>


		</view>
	
	</feature>

	<view name="system, basic, detailed, video, grid">

		<helpsystem name="help">
